rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Admins collection: docs with id == admin uid
    match /admins/{adminId} {
      allow read: if request.auth != null && request.auth.uid == adminId;
      // disallow client writes to admins (should be managed from console or cloud functions)
      allow write: if false;
    }
    // Users collection: user can read/write their own document, admins can read/write any user doc
    match /users/{userId} {
      allow read, write: if request.auth != null && (
        request.auth.uid == userId ||
        exists(/databases/$(database)/documents/admins/$(request.auth.uid))
      );
    }
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
